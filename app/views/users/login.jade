extends ../shared/template

block content
  h1 Please login to your AirBnB account now

  .row
    .small-6.columns
      form(method='post', action='/login')
        fieldset
          legend= title
          label Email
          input(type='email', name='email', autofocus='true')
          label Password
          input(type='password', name='password')
          button.tiny.radius Login
    .small-6.columns


